
@*@using IrisUI.Views.ReportTest*@
@using Telerik.Reporting
@using Telerik.ReportViewer.Mvc


@*TODO: TE find a way to move this off the partial view*@
<head>
    <style>
        #reportViewArea {
            position: relative;
            width: 950px;
            height: 850px;
            font-family: Verdana, Arial;
        }
    </style>
    <script src="@Url.Content("~/ReportViewer/js/telerikReportViewer-13.0.19.222.min.js")"></script>
</head>

@(Html.TelerikReporting().ReportViewer()
        .Id("reportViewArea")
        .ServiceUrl(Url.Content("/api/reports"))
        //
        // Strongly typed ReportSource - TypeReportSource or UriReportSource.
        .ReportSource(new TypeReportSource() { TypeName = "ReportLibrary."+ Session["ReportName"].ToString()+", ReportLibrary, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" })
        .ViewMode(ViewMode.PrintPreview)
        .ScaleMode(ScaleMode.FitPageWidth)
        .Scale(1.0)
        .PersistSession(false)
        .PrintMode(PrintMode.AutoSelect)
.ParametersAreaVisible(false)
)


