@using IrisAttributes
@model object

@{
    FilterDropdownAttribute operatorDropdown = new FilterDropdownAttribute();
    SelectList operatordropdownList = operatorDropdown.OperatorDropdownList("Dropdown");

        @(Html.Kendo()
                .ComboBox()
                .Name("operatordropdownListoptions")
                .Placeholder("Select...")
                .Filter("startswith")
                .Suggest(true)
                .SelectedIndex(0)
                .DataTextField("Text")
                .DataValueField("Value")
                .HtmlAttributes(new { style = "width:110px" })
                .BindTo(operatordropdownList))

    }

