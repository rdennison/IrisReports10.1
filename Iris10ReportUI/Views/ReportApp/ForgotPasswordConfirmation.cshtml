
<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #eee;
    }

    .confirm-forgotpassword {
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .confirm-forgotpassword .form-control {
            position: relative;
            height: auto;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 10px;
        }

            .confirm-forgotpassword .form-control:focus {
                z-index: 2;
            }
</style>

@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}

<div class="container">

    <div class="confirm-forgotpassword">

        <div id="title">
            <img class="titleimage img-responsive" src="~/Content/Images/iris-logo-355.jpg" />
        </div>

        <h2 class="confirm-forgotpassword-heading">@ViewData["Title"]</h2>

        <p class="alert alert-info">Please check your email to reset your password.</p>

        <p>@Html.ActionLink("Return to Login", "Login")</p>

    </div> <!-- /confirm-forgotpassword -->

</div> <!-- /container -->
