@model IrisModels.API.LostPasswordModel
@using System.Web.Mvc.Html



<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #eee;
    }

    .form-forgotpassword {
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .form-forgotpassword .form-control {
            position: relative;
            height: auto;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
        }

            .form-forgotpassword .form-control:focus {
                z-index: 2;
            }

        .form-forgotpassword input[type="email"] {
            margin-bottom: 10px;
        }
</style>

@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}

<div class="container">

    <div class="form-forgotpassword">

        <div id="title">
            <img class="titleimage img-responsive" src="~/Content/Images/iris-logo-355.jpg" />
        </div>

        @using (Html.BeginForm("ForgotPassword"))
        {
            <h2 class="form-forgotpassword-heading">@ViewData["Title"]</h2>

            <p class="alert alert-info">Please enter your email address and click submit.  An email with further instructions will be sent to the address supplied.  Thank You!</p>
            <label for="inputEmail" class="sr-only">Email address</label>
            @Html.Label("Email", new { @for = "inputEmail", @class = "control-label sr-only" })
            @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", id = "inputEmail", placeholder = "Email" })

            <button class="k-button k-primary btn-block" type="submit">Submit</button>

            @Html.ValidationSummary(true)

        }

    </div> <!-- /form-forgotpassword -->

</div> <!-- /container -->
    
    
    


