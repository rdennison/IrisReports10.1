@model IrisModels.API.AuthStartRequestModel
@using System.Web.Mvc.Html

<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #eee;
    }

    .form-signin {
        max-width: 330px;
        padding: 15px;
        margin: 0 auto;
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .form-signin .form-signin-heading {
            margin-bottom: 10px;
        }

        .form-signin .form-control {
            position: relative;
            height: auto;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
        }

            .form-signin .form-control:focus {
                z-index: 2;
            }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>

<div class="container">

    <div class="form-signin">

        <div id="title">
            <img class="titleimage img-responsive" src="~/Content/Images/iris-logo-355.jpg" />
        </div>

                @using (Html.BeginForm())
                {

                    <h2 class="form-signin-heading">@ViewData["Title"]</h2>
                    
                    <label for="inputEmail" class="sr-only">Email address</label>
                    @Html.Label("Email", new { @for = "inputEmail", @class = "control-label sr-only" })
                    @Html.TextBoxFor(model => model.Username, new { @type = "email", @class = "form-control", id = "inputEmail", placeholder = "Email" })
                    @Html.Label("Password", new { @for = "inputPassword", @class = "control-label sr-only" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Password" })

                    <p class="help-block">@Html.ActionLink("Forgot your password?", "ForgotPassword")</p>

                    <button class="k-button k-primary btn-block" type="submit" id="submit" name="submit">Login</button>

                    @Html.ValidationSummary(true)

                }
        
           
        
</div> <!-- /form-signin -->
   
</div> <!-- /container -->
